mixin nav(className, items, itemsActive)
    nav(class=`${className}`)
        ul(class=`${className}__list`)
            each item, index in items
                li(class=`${className}__item ` + (( index === itemsActive ) ? `${className}__item_active`: ''))
                    a(class=`${className}__link`)= item


mixin icon(name,mod)
    - mod = mod || ''
    svg(class="icon icon-" + name + ' ' + mod)
        use(xlink:href="assets/img/sprite.svg#" + name)